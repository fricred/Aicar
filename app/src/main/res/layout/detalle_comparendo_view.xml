<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardComparendo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="3dp"
        card_view:cardCornerRadius="3dp">


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp">

            <!-- 2 columns -->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="5dip"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="4"
                    android:text="Comparendo Electronico"
                    android:textAlignment="textEnd"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/comparendoElectronico"
                    android:layout_weight="3"
                    android:text="CC"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <View style="@style/Divider" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:padding="5dip"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="4"

                    android:text="Fecha NotificaciÃ³n"
                    android:textAlignment="textEnd"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fechaNotificacion"
                    android:layout_weight="3"
                    android:text="1024487499"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <View style="@style/Divider" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:padding="5dip"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="4"
                    android:text="Agendete"

                    android:textAlignment="textEnd"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/agente"
                    android:layout_weight="3"
                    android:text="Jeisson"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

        </TableLayout>
    </android.support.v7.widget.CardView>

    <de.codecrafters.tableview.TableView xmlns:table="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tableInfracciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/White"
        table:tableView_columnCount="4"
        table:tableView_headerColor="@color/colorPrimaryDark" />
</LinearLayout>